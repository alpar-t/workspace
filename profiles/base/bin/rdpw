#!/bin/bash
if [ -z "$A" ] ; then
    echo 'Address is mandatory (pass in $A)'
    exit 1
fi
if [ -z "$P" ] ; then
    echo 'Password is mandatory (pass in $P)'
    exit 1
fi
if [ -z "$N" ] ; then
    N=$A
fi
if [ -z "$U" ] ; then
    U="Administrator"
fi
echo "Starting RDP connection running in the background"
set -x
xfreerdp \
    /t:$N \
    /cert-ignore \
    /size:1280x1024 \
    /bpp:24 \
    +compression \
    /network:lan \
    +clipboard \
    +fonts \
    -themes \
    -wallpaper \
    -grab-keyboard \
    /drive:linkback:~/tmp \
    /v:$A  \
    /u:$U \
    /sec:rdp \
    /p:$P




